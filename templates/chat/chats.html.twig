{% extends 'base.html.twig' %}

{% block page_content %}
    <div class="container">
        <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">
                <div id="plist" class="people-list">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Search...">
                    </div>
                    <ul class="list-unstyled chat-list mt-2 mb-0">
                        {% if chats is defined and chats is not empty%}
                            {% for chat in chats %}
                            <li class="clearfix">
                                <a href="{{ path('app_chat_id', {'id':chat.id}) }}">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                                <div class="about">
                                    <div class="name">{{ chat.createName(app.user) }}</div>
                                    <div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>
                                </div>
                                </a>
                            </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
                {% if activeChat is defined and activeChat is not empty %}
                    {% include'blocks/chats/chat.html.twig' with {'chat' : activeChat } %}
                {% endif %}
            </div>
        </div>
    </div>
    </div>

{% endblock %}